/* pages/mine/mine.wxss */
.container {
  align-items: stretch;
  padding: 0;
  height: 50%;
  overflow: hidden;
  font-weight: bold;
}
.content{
  flex: 1;
  display: flex;
  position: relative;
  /* z-index: 10; */
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding-bottom: 600rpx;
}
.title{
  /* color: white; */
  font-size: 60rpx;
  text-align: center;
  position: absolute;
  left: 50%;
  width: 600rpx;
  height: 200rpx;
  opacity: 1;
  top:300rpx;
  margin-left: -280rpx;
  color:#003153;
}
.logo {
  position: absolute;
  z-index: 0;
  left: 50%;
  top: 100rpx;
  width: 160rpx;
  height: 160rpx;
  margin-left: -80rpx;
  border-radius: 160rpx;
  opacity: .95;
}
.menu-line{
  background-color: white;
  z-index: 5;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  margin-top: 10rpx;
}
.menu-name{
  margin-left: auto;
  margin-right: auto;
  display: flex;
}
.menu-line image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}
